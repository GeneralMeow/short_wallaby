doctype
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title The Good Looking Book Store
    link(rel='stylesheet', href='/stylesheets/meyers-reset.css')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(href='https://fonts.googleapis.com/css?family=Lato|Playfair+Display', rel='stylesheet')
    script.
      //packery logic
      var elem = document.querySelector('.grid');
      var pckry = new Packery( elem, {
      // options
      itemSelector: '.grid-item',
      gutter: 10
      });
      // element argument can be a selector string
      //   for an individual element
      var pckry = new Packery( '.grid', {
      // options
      });
  body
    main
      // Navigation
      section
        #navigation.container
          // logo
          img#logo(src='images/short-wallaby.svg', alt='logo')
          // search box
          form.search
            input#search-box(type='text', name='', value='Enter a Book Title or Author')
            button#search-book(type='submit', name='button') Search
      section#home.tab-content
        .grid
          ul.grid-item
            each book in books
              li
                img(src=book.bookUrl)

    // Main Scripts
    script(src='http://code.jquery.com/jquery-1.11.1.js')
    script(src='vendor-scripts/packery.pkgd.min.js')
    script(type='text/javascript', src='packery.js')
    script(type='text/javascript', src='data/library.js')
    script(type='text/javascript', src='scripts/models/libraryModel.js')
    // <script type="text/javascript" src="scripts/models/libraryView.js"></script>
    //views scripts
    script(type='text/javascript', src='/javascripts/index.js')
